#{extends 'main.html' /}
#{set title:'Latest test results' /}

#{ifnot results}
    #{ifnot runJob.equals("true")}    
    <p>
        No results
    </p>
    #{/ifnot}
    #{else}
        <p style="color:red;">
            No results for now. Testing... hit <a style="color:red;" href="@{index}">refresh</a> on finish (see the console or wait some minutes)!
        </p>
    #{/else}
#{/ifnot}

#{list results, as:'result'}
    <div class="result">
        <a href="@{show(result.uid)}" id="${result.uid}" class="${result.passed ? 'passed' : 'failed'}">
            ${result.name} <em>${result.version}</em>
        </a>
    </div>
#{/list}
#{a @run()}run executor job#{/a}
